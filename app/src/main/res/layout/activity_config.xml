<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E6E3"
    tools:context=".config.ConfigActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewLogo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"
            android:src="@mipmap/logo"
            tools:layout_editor_absoluteX="107dp"
            tools:layout_editor_absoluteY="31dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="App Services Endpoint:"
            android:textColor="@color/colorPrimary"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="233dp" />

        <EditText
            android:id="@+id/appServicesURLInput"
            android:inputType="textMultiLine"
            android:layout_height="wrap_content"
            android:longClickable="true"
            android:layout_width="408dp"
            android:padding="5dp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="262dp" />

        <Button
            android:id="@+id/buttonSaveConfig"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="onClickSaveAppServicesURL"
            android:text="Save"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="143dp"
            tools:layout_editor_absoluteY="309dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>